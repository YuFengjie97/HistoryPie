{
  "manifest_version": 3,
  "name": "__MSG_app_name__",
  "version": "1.0",
  "description": "__MSG_app_description__",
  "action": {
    "default_popup": "dist/popup/index.html"
  },
  "icons": {
    "16": "assets/icon-pie.png",
    "32": "assets/icon-pie.png",
    "48": "assets/icon-pie.png",
    "128": "assets/icon-pie.png"
  },
  "content_scripts": [
    {
      "js": ["dist/content/index.global.js"],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "dist/background/index.mjs",
    "type": "module"
  },
  "permissions": ["tabs","storage", "activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["dist/chart/index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "default_locale": "en",
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:3000; object-src 'self'"
  }
}
