{
  "manifest_version": 3,
  "name": "__MSG_app_name__",
  "version": "1.0",
  "description": "__MSG_app_description__",
  "action": {
    "default_popup": "dist/src/popup/index.html"
  },
  "icons": {
    "16": "assets/icon_pie.png",
    "32": "assets/icon_pie.png",
    "48": "assets/icon_pie.png",
    "128": "assets/icon_pie.png"
  },
  "content_scripts": [
    {
      "js": ["dist/content/index.mjs"],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["tabs","storage", "activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["html/chart.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "default_locale": "en"
}
