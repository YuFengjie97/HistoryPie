{
  "manifest_version": 3,
  "name": "__MSG_app_name__",
  "version": "1.0",
  "description": "__MSG_app_description__",
  "action": {
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "images/icon_pie_16.png",
    "32": "images/icon_pie_32.png",
    "48": "images/icon_pie_48.png",
    "128": "images/icon_pie_128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["tabs","storage", "activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["html/chart.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "default_locale": "en"
}
